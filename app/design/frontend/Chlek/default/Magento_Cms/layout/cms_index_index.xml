                    <block name="translate.test2" class="Magento\Framework\View\Element\Template" template="Magento_Cms::new-template.phtml"/>
                    <arguments>
                        <argument name="argument_string" xsi:type="string" translate="true">Argument string.</argument>
                        <argument name="is_active" xsi:type="boolean">true</argument>
                        <argument name="has_link" xsi:type="url" path="checkout/cart/index"/>
