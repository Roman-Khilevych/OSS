<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="myContainer">
            <container name="secondContainer" htmlTag="div" htmlClass="secondClass">
                <block class="Magento\Framework\View\Element\Text">
                    <arguments>
                        <argument name="text" xsi:type="string"><![CDATA[Hello second container]]></argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="firstTemplate" template="Magento_Cms::file.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="secondTemplate" template="Magento_Cms::secondTemplate.phtml">
                <block class="Magento\Framework\View\Element\Template" name="childTemplate" template="Magento_Cms::childTemplate.phtml">
                    <arguments>
                        <argument name="argument-string" xsi:type="string" translate="true">Argument string</argument>
                        <argument name="arg-string" xsi:type="string" translate="true">Result true</argument>
                        <argument name="arg-boolean" xsi:type="boolean">true</argument>
                        <argument name="arg-url" xsi:type="url" path="gear/bags.html"></argument>
                        <argument name="image" xsi:type="string">logo.png</argument>
                        <argument name="alt" xsi:type="string" translate="true">logo img</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
