<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="Magento\Cms\Block\Block" name="promotion.block" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">promotion.block</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock class="Magento\Customer\Block\Account\Link" name="my-account-link">
            <arguments>
                <argument name="label" xsi:type="string" translate="true"/>
                <argument name="class" xsi:type="string">my-account-link</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="top.links">
            <move element="top.search" destination="top.links" after="my-account-link"/>
            <move element="minicart" destination="top.links" before="wish-list-link"/>
            <move element="logo" destination="header.panel" before="top.links"/>
        </referenceBlock>
        <move element="top.links" destination="header.panel" after="-" />
        <referenceBlock name="authorization-link" remove="true"/>
        <referenceBlock name="register-link" remove="true"/>
        <referenceBlock name="header" remove="true"/>
        <referenceBlock name="catalog.compare.link" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/magento-logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">158</argument>
                <argument name="logo_img_height" xsi:type="number">46</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="footer">
            <container name="footer.block.link" htmlTag="div" htmlClass="footer-block-links" before="-">
                <block class="Magento\Cms\Block\Block" name="services.exclusifs">
                    <arguments>
                        <argument name="block_id" xsi:type="string">services.exclusifs</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="besoin.daide">
                    <arguments>
                        <argument name="block_id" xsi:type="string">besoin.daide</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="a.propos">
                    <arguments>
                        <argument name="block_id" xsi:type="string">a.propos</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="retrouvez.nous.sur">
                    <arguments>
                        <argument name="block_id" xsi:type="string">retrouvez.nous.sur</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
