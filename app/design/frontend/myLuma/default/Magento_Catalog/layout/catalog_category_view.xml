<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left-addition" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="page-layout-2columns-left"/>
        <referenceContainer name="div.sidebar.main.addition2">
            <block class="Magento\Framework\View\Element\Text">
                <arguments>
                    <argument name="text" xsi:type="string"><![CDATA[Hello]]></argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="header.container" destination="page.wrapper" before="before.body.end"/>
        <move element="footer-container" destination="page.wrapper" before="main.content"/>
    </body>
</page>
