<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="category_page_grid" type="small_image">
                <width>100</width>
                <height>120</height>
            </image>
            <image id="category_page_list" type="small_image">
                <width>400</width>
                <height>500</height>
            </image>
            <image id="product_page_image_large" type="image"/>
            <image id="product_page_image_medium" type="image">
                <width>500</width>
                <height>500</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="loop">false</var>
            <var name="navtype">thumbs</var>
            <var name="transition">
                <var name="effect">slide</var>
                <var name="duration">800</var>
            </var>
            <var name="fullscreen">
                <var name="arrows">false</var>
                <var name="navdir">vertical</var>
                <var name="navarrows">true</var>
                <var name="navtype">thumbs</var>
            </var>
        </var>
        <var name="magnifier">
            <var name="fullscreenzoom">10</var>
            <var name="width">800</var>
            <var name="height">800</var>
            <var name="enabled">true</var>
        </var>
    </vars>
</view>
